<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gestiune Jocuri</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Rubik:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Rubik', sans-serif;
            color: #fff;
            background: url('/images/rdr2.png') no-repeat center center fixed;
            background-size: cover;
        }

        .overlay {
            background-color: rgba(0, 0, 0, 0.5);
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

        .hero-section {
            position: relative;
            z-index: 1;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            height: 100vh;
            text-align: center;
            padding-top: 10vh;
        }

        .hero-title {
            font-family: 'Playfair Display', serif;
            font-size: 4rem;
            font-weight: bold;
            margin-bottom: 1rem;
            background: linear-gradient(to right, #fff, #fff, #fff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero-subtitle {
            font-size: 1.7rem;
            margin-bottom: 5rem;
        }

        .hero-button {
            background-color: transparent;
            border: 2px solid #fff;
            color: #fff;
            padding: 1.2rem 5rem;
            font-size: 1.5rem;
            font-weight: 700;
            text-decoration: none;
            transition: all 0.3s ease;
            text-align: center;
            border-radius: 6px;
            letter-spacing: 1px;
        }

            .hero-button:hover {
                background-color: #fff;
                color: #000;
                box-shadow: 0 0 12px rgba(255, 255, 255, 0.4);
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <div class="overlay"></div>

    <div class="hero-section">
        @RenderBody()
    </div>
</body>
</html>
