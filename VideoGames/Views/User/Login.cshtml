@* Login.cshtml *@
@{
    ViewBag.Title = "Autentificare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Autentificare</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Rubik', sans-serif;
        }

        .background {
            background: url('/images/rdr2.png') no-repeat center center fixed;
            background-size: cover;
            filter: brightness(0.25);
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .login-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-box {
            background-color: #ffffffbb;
            padding: 3rem;
            border-radius: 16px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 420px;
            color: #333;
        }

            .login-box h2 {
                font-weight: 700;
                margin-bottom: 2rem;
                text-align: center;
            }

        .form-control {
            border-radius: 10px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
        }

        .btn-login {
            width: 100%;
            margin-top: 1.5rem;
            padding: 0.75rem;
            border-radius: 10px;
            font-weight: 600;
            background-color: #2e63ff;
            color: white;
            border: none;
            transition: background 0.3s;
        }

            .btn-login:hover {
                background-color: #1d4ed8;
            }
    </style>
</head>
<body>
    <div class="background"></div>
    <div class="login-wrapper">
        <div class="login-box">
            <h2>Autentificare</h2>
            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                <div class="mb-3">
                    @Html.Label("Username")
                    @Html.TextBox("Username", null, new { @class = "form-control", placeholder = "Introdu username" })
                </div>
                <div class="mb-3">
                    @Html.Label("Parolă")
                    @Html.Password("Password", null, new { @class = "form-control", placeholder = "Introdu parola" })
                </div>
                <button type="submit" class="btn btn-login">Autentificare</button>
            }
            @if (ViewBag.Error != null)
            {
                <div class="text-danger text-center mt-3">@ViewBag.Error</div>
            }
        </div>
    </div>
</body>
</html>